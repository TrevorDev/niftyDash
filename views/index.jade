doctype html
html
  head
    title Website
    link(rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.min.css")
    link(rel="stylesheet" href="/bower_components/font-awesome/css/font-awesome.min.css")
    //- script(src='/bower_components/bootstrap/dist/js/bootstrap.min.js')
    style.
      
  body
    div.container-fluid(style="padding-right:0px;padding-left:0px;")
      div.row
        #sideMenu.col-md-2
          ul.list-group
            li.list-group-item.active
              span
                i.fa.fa-diamond
              span  Widgets
            li.btn.list-group-item(rv-each-widget="widgets" rv-on-click="widgetMenuClicked" style="text-align: inherit;")
              span [[widget.name]]
              span(class="label label-default label-pill pull-right") [[widget.notification]]
        #widgetContent(class="col-md-10")
          div [[accountUrl]]
          div.card(rv-each-story="selectedWidget.stories")
            div.card-block
              button.btn.btn-secondary(style="margin-right:3px;" rv-on-click="selectedWidget.storyClicked")
                i.fa.fa-close
              a(target="_blank" rv-href="story.commentsUrl")
                button.btn.btn-secondary( rv-on-click="selectedWidget.storyClicked" style="margin-right:3px;")
                  i.fa.fa-comments
              span.card-text [[story.title]]
        
