{
    "version": "1.5.0-beta",
    "externalTranspiler": "babel",
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalAsyncFunctions": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "filesGlob": [
        "./**/*.ts",
        "./**/*.tsx",
        "!./node_modules/**/*"
    ],
    "files": [
        "./app.ts",
        "./controllers/user.ts",
        "./libs/appFactory.ts",
        "./libs/config.ts",
        "./libs/database.ts",
        "./libs/objectPromise.ts",
        "./libs/preLoadDB.ts",
        "./models/models.ts",
        "./models/user.ts",
        "./models/viewedItem.ts",
        "./models/widget.ts",
        "./public/ts/index/logic.ts",
        "./public/ts/widgets/viewedItem.ts",
        "./public/ts/widgets/widget.ts",
        "./typings/body-parser/body-parser.d.ts",
        "./typings/browserify/browserify.d.ts",
        "./typings/express/express.d.ts",
        "./typings/jquery/jquery.d.ts",
        "./typings/lodash/lodash.d.ts",
        "./typings/mime/mime.d.ts",
        "./typings/node/node.d.ts",
        "./typings/sequelize/sequelize.d.ts",
        "./typings/serve-static/serve-static.d.ts",
        "./typings/tsd.d.ts",
        "./typings/validator/validator.d.ts"
    ]
}
